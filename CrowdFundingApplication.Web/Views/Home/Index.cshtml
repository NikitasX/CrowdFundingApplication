@{
    ViewData["Title"] = "Home Page";
}
    <div id="carouselExampleIndicators" style="border-radius:15px;" 
         class="index-element p-3 mb-3 carousel slide col-md-12" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="/images/slide-1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/slide-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="/images/slide-3.jpg" alt="Third slide">
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" 
           role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>

        <a class="carousel-control-next" href="#carouselExampleIndicators" 
           role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="col-md-12 p-4 index-element mb-3">
        <h5 class="col-md-12 text-info text-center font-weight-bold p-2">
            Search Projects
        </h5>

        <form class="col-md-12" method="post" action="@Url.Action("Search", "project")">
            <div class="form-group p-0 d-flex">
                <select name="ProjectCategory" class="form-control col col-md-4">
                    @{
                        var categories = Enum.GetValues(
                            typeof(CrowdFundingApplication.Core.Model.ProjectCategory))
                            .Cast<CrowdFundingApplication.Core.Model.ProjectCategory>();

                        foreach (var category in categories) {
                            <option value="@category">@category</option>
                        }
                    }
                </select>

                <input type="text" name="ProjectTitle" class="form-control col col-md-8"
                       placeholder="Project title..." />

            </div>

            <input type="submit" value="Search Project" 
                   class="btn btn-primary js-search-project col-md-3" 
                   style="margin-left:auto;" />
        </form>
    </div>

    <div class="col-md-12 p-4 index-element">
        <h5 class="col-md-12 text-info text-center font-weight-bold p-2">
            Recent Projects
        </h5>

        <div class="row js-view-project-list d-flex justify-content-around">
        </div>
    </div>
